<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controller.GameController">

    <!-- Padding general -->
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Sección superior -->
    <top>
        <BorderPane>
            <left>
                <HBox alignment="TOP_LEFT" spacing="10">
                    <Label text="Nivel: "/>
                    <Label fx:id="levelLabel" text="1"/>
                </HBox>
            </left>

            <center>
                <HBox alignment="TOP_CENTER">
                    <ImageView fx:id="eclipseImage" fitWidth="200" fitHeight="200"/>
                </HBox>
            </center>

            <right>
                <HBox alignment="TOP_RIGHT" spacing="10">
                    <Label text="Tiempo: "/>
                    <Label fx:id="timeLabel" text="20"/>
                </HBox>
            </right>
        </BorderPane>
    </top>

    <!-- Sección central -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="phraseLabel" text="Frase">
                <font>
                    <Font size="48"/>
                </font>
            </Label>
            <TextField fx:id="inputField" maxWidth="600" alignment="CENTER"/>
            <Button fx:id="submitButton" text="Enviar">
                <font>
                    <Font size="24"/>
                </font>
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
            </Button>
        </VBox>
    </center>

    <!-- Sección inferior -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="gameOverMessage" visible="false"/>
            <Button fx:id="restartButton" text="Reintentar" visible="false">
                <font>
                    <Font size="18"/>
                </font>
            </Button>
            <Label fx:id="messageLabel"/>
        </VBox>
    </bottom>
</BorderPane>
